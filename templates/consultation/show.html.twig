{% extends 'base.html.twig' %}

{% block title %}Consultation{% endblock %}

{% block body %}
    <h1>Consultation</h1>

    <table class="table  table-striped">
        <tbody>
            
            <tr>
                <th>Nom Prénom</th>
                <td>{{ consultation.enfant.nom }} {{ consultation.enfant.prenom }}</td>
            </tr>

            <tr>
                <th>Date Consultation</th>
                <td>{{ consultation.dateConsultation ? consultation.dateConsultation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Poids (Kg)</th>
                <td>{{ consultation.poids }}</td>
            </tr>
            <tr>
                <th>Taille (Cm)</th>
                <td>{{ consultation.taille }}</td>
            </tr>
            <tr>
                <th>Motif</th>
                <td>{{ consultation.motif }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('consultation_index') }}">Retour à la Liste</a>

    <a class="btn btn-success" href="{{ path('consultation_edit', {'id': consultation.id}) }}">Modifier</a>

    {{ include('consultation/_delete_form.html.twig') }}
{% endblock %}
